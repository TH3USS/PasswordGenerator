@model PasswordGenerator.Models.PasswordOptions

<h2>Password Generator</h2>

<form asp-action="Generate" asp-controller="Password" method="post">
    <div class="form-group">
        <label for="Length">Password Length</label>
        <input type="number" class="form-control" id="Length" name="Length" value="@Model.Length" min="4" max="128" required />
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="IncludeUppercase" name="IncludeUppercase" @(Model.IncludeUppercase ? "checked" : "") />
        <label class="form-check-label" for="IncludeUppercase">Include Uppercase Letters</label>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="IncludeNumbers" name="IncludeNumbers" @(Model.IncludeNumbers ? "checked" : "") />
        <label class="form-check-label" for="IncludeNumbers">Include Numbers</label>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="IncludeSpecialCharacters" name="IncludeSpecialCharacters" @(Model.IncludeSpecialCharacters ? "checked" : "") />
        <label class="form-check-label" for="IncludeSpecialCharacters">Include Special Characters</label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Generate Password</button>
</form>

@if (ViewBag.GeneratedPassword != null)
{
    <div class="alert alert-success mt-3">
        <strong>Generated Password:</strong> @ViewBag.GeneratedPassword
    </div>
}
